{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "outDir": "outputjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es6"]
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules"]
}
