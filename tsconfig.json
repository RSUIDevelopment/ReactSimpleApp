{

    "compilerOptions": {
      "target": "es5",
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "outputjs",
      "typeRoots": ["node_modules/@types"],
      "lib": [
        "dom",
        "es6"
      ]
    },
    "include": [
      "app/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }